  <script>

    document.addEventListener("DOMContentLoaded", () => {
      const cursor = document.querySelector(".custom-cursor");
      document.addEventListener("mousemove", (e) => {
        const x = e.clientX;
        const y = e.clientY;

        cursor.style.transform = `translate(${x}px, ${y}px)`;
      });
    });


    const roles = [
      "Front-End Developer",
      "UI/UX Designer",
      "Video Editor",
      "Photographer"
    ];

    const roleElement = document.getElementById("role");
    let currentIndex = 0;

    function changeRole() {
      // Fade out animation
      roleElement.style.opacity = "0";

      // Wait for fade-out animation to complete before updating text
      setTimeout(() => {
        roleElement.textContent = roles[currentIndex];
        currentIndex = (currentIndex + 1) % roles.length;

        // Fade in animation
        roleElement.style.opacity = "1";
      }, 500); // Matches the CSS transition duration for fade-out
    }

    // Start the role rotation
    function startRoleChange() {
      changeRole();

      // Repeat role change every 5 seconds
      setInterval(() => {
        changeRole();
      }, 5000); // 5 seconds interval
    }

    // Add initial styles and start role change
    roleElement.style.transition = "opacity 0.5s ease";
    startRoleChange();
    
    const hamburgerBtn = document.getElementById("hamburger-btn");
    const phoneDiv = document.getElementById("phone");
    const closeIcon = document.querySelector(".ri-close-large-line");

    // Toggle the visibility of the phone div
    hamburgerBtn.addEventListener("click", () => {
      phoneDiv.classList.toggle("open");
      document.body.style.overflow = phoneDiv.classList.contains("open") ? "hidden" : "auto";
    });

    // Close the phone div when the close icon is clicked
    closeIcon.addEventListener("click", () => {
      phoneDiv.classList.remove("open");
      document.body.style.overflow = "auto";
    });

  </script>
